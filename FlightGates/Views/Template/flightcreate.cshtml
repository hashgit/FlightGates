<div class="row">
    <div class="col-md-12">
        <a href="#/gates/{{GateId}}">Back to gate</a>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="h2">
            New Flight
        </div>
        <form class="form-horizontal" ng-submit="SaveFlight()" novalidate>
            <div class="form-group">
                <label class="control-label col-md-3">Arrival DateTime</label>
                <div class="col-md-9">
                    <input type="datetime" class="form-control" ng-model="Flight.ArrivalDateTime" placeholder="YYYY-MM-DDTHH:MI:SS" required />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-3">Departure DateTime</label>
                <div class="col-md-9">
                    <input type="datetime" class="form-control" ng-model="Flight.DepartureDateTime" placeholder="YYYY-MM-DDTHH:MI:SS" required/>
                    Default is arrival time + 30 minutes
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-3">Gate</label>
                <div class="col-md-9">
                    <select class="form-control" ng-model="Flight.GateId" ng-options="gate.Id as gate.Id for gate in Gates" required></select>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-7 col-md-offset-3">
                    <input type="submit" class="btn btn-default" value="Submit" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-7 col-md-offset-3 text-info">
                    {{UpdateMessage}}
                </div>
            </div>
        </form>
    </div>
</div>
